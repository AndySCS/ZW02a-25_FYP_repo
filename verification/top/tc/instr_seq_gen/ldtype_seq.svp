	    if(i==0)begin
		    ram_tmp_pre[31:0] = lbu.instruction;
	    end
        else if(i%4 == 1)begin
		    ram_tmp_pre[63:32] = lbu.instruction;
	    end
        else if(i%4 == 2)begin
		    ram_tmp_pre[95:64] = lbu.instruction;
	    end
        else if(i%4 == 3)begin
		    ram_tmp_pre[127:96] = lbu.instruction;
	    end
	    else begin
		    ram_tmp[ram_count] = ram_tmp_pre;
		    ram_count = ram_count+1;
		    ram_tmp_pre[31:0] = lbu.instruction;
	    end
    end

    for(int i = 801; i < 1024; i++) begin
        lhu = new();
        lhu.randomize();
	    lhu.pack();
	    if(i==0)begin
		    ram_tmp_pre[31:0] = lhu.instruction;
