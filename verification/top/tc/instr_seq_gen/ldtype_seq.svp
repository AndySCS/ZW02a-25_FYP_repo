	    end
    end

    for(int i = 401; i < 601; i++) begin
        lw = new();
        lw.randomize();
	    lw.pack();
	    if(i==0)begin
		    ram_tmp_pre[31:0] = lw.instruction;
	    end
        else if(i%4 == 1)begin
		    ram_tmp_pre[63:32] = lw.instruction;
	    end
        else if(i%4 == 2)begin
		    ram_tmp_pre[95:64] = lw.instruction;
	    end
